#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

PYTHON="${PYTHON:-}"
if [[ -z "${PYTHON}" ]]; then
  if [[ -x "${ROOT_DIR}/.venv/bin/python" ]]; then
    PYTHON="${ROOT_DIR}/.venv/bin/python"
  else
    PYTHON="python3"
  fi
fi

if ! command -v "${PYTHON}" >/dev/null 2>&1; then
  echo "python3 not found. Install Python 3.10+ and try again." >&2
  exit 1
fi

exec "${PYTHON}" -m agent "$@"
